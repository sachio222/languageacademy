{
  "platform": "Instagram",
  "content_type": "Carousel Post",
  "format": {
    "image_dimensions": "1080x1080",
    "aspect_ratio": "1:1",
    "slides_per_carousel": 4,
    "max_slides": 10,
    "file_format": "PNG",
    "max_file_size_per_image": "8 MB",
    "max_total_size": "30 MB"
  },
  "text_limits": {
    "caption_max": 2200,
    "caption_optimal": "1500-2000",
    "caption_preview": 125,
    "alt_text_max": 100,
    "hashtags_recommended": "15-30",
    "hashtags_used": 20
  },
  "design_specs": {
    "colors": {
      "brand_blue": "#3b82f6",
      "brand_blue_dark": "#2563eb",
      "text_dark": "#1a1a1a",
      "text_medium": "#665665",
      "text_light": "#999999",
      "background_light": "#fafbfc"
    },
    "typography": {
      "font_stack": "-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "sizes": {
        "word_display": "140px",
        "phonetic": "36px",
        "definition": "64px",
        "translation": "64px",
        "examples_french": "52px",
        "examples_english": "40px",
        "metadata": "28px",
        "cta_title": "56px",
        "cta_subtitle": "40px",
        "cta_url": "36px"
      },
      "weights": {
        "ultra_thin": 200,
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600
      }
    },
    "effects": {
      "glassmorphism": "backdrop-filter: blur(12px)",
      "text_shadow": "0 4px 20px rgba(0, 0, 0, 0.3)",
      "overlay": "linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5))"
    }
  },
  "posting_strategy": {
    "best_posting_times": ["9-11 AM EST", "7-9 PM EST"],
    "location_tag_boost": "20-30%",
    "suggested_locations": {
      "paris": 213385402,
      "france": 106315219
    },
    "engagement_tips": [
      "First 125 chars crucial (shown before 'more')",
      "3-5 line breaks improve readability",
      "Emojis increase engagement by 47%",
      "CTA above hashtags for visibility",
      "Caption length 1500-2000 chars optimal"
    ]
  },
  "api_endpoints": {
    "base_url": "https://graph.facebook.com/v18.0",
    "create_container": "/{instagram-business-account-id}/media",
    "publish_post": "/{instagram-business-account-id}/media_publish"
  },
  "brand_assets": {
    "logo_white": "https://languageacademy.io/img/TLA_CoreMark_White_tm_v1.1.1.png",
    "logo_blue": "https://languageacademy.io/img/TLA_CoreMark_Blue_tm_v1.1.1.png",
    "website": "https://languageacademy.io"
  },
  "slide_structure": [
    {
      "slide": 1,
      "type": "word",
      "description": "Word over Pexels background",
      "elements": ["word", "phonetic", "background_image"],
      "design": "Ultra-thin typography, glassmorphic phonetic pill, dark overlay"
    },
    {
      "slide": 2,
      "type": "definition",
      "description": "Definition and translation",
      "elements": ["word", "translation", "part_of_speech", "difficulty_level"],
      "design": "Subtle gradient background, clean hierarchy, pill-shaped meta container"
    },
    {
      "slide": 3,
      "type": "examples",
      "description": "Usage examples",
      "elements": ["example_1", "example_2"],
      "design": "Context labels in brand blue, generous spacing, gradient divider"
    },
    {
      "slide": 4,
      "type": "cta",
      "description": "Call to action",
      "elements": ["logo", "headline", "word", "website_url"],
      "design": "Premium blue gradient, glassmorphic URL container"
    }
  ]
}

